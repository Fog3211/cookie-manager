{
  "manifest_version": 3,
  "name": "Cookie Manager by Fog3211",
  "homepage_url": "https://github.com/Fog3211/cookie-manager",
  "description": "A brower extension for managing cookies",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "cookie"
  ],
  "icons": {
    "48": "assets/48x48.png",
    "128": "assets/128x128.png"
  },
  "action": {
    "default_icon": {
      "48": "assets/48x48.png",
      "128": "assets/128x128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [ "*" ],
      "matches": [ "<all_urls>" ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "{{chrome}}.incognito": "split"
}
